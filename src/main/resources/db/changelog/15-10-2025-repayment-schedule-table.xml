<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create-repayment-schedule-table-v2" author="kuza">

        <!-- Ensure the 'loans' table exists first and repayment_schedule does NOT exist -->
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="loans"/>
            <not>
                <tableExists tableName="repayment_schedule"/>
            </not>
        </preConditions>

        <!-- Create repayment_schedule table -->
        <createTable tableName="repayment_schedule">
            <column name="id" type="BIGINT UNSIGNED" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="loan_id" type="BIGINT UNSIGNED">
                <constraints nullable="false"/>
            </column>

            <column name="installment_number" type="INT"/>
            <column name="days" type="INT"/>
            <column name="expected_date" type="DATE"/>
            <column name="paid_date" type="DATE"/>
            <column name="principal_due" type="DECIMAL(19,2)"/>
            <column name="interest" type="DECIMAL(19,2)"/>
            <column name="fees" type="DECIMAL(19,2)"/>
            <column name="penalty" type="DECIMAL(19,2)"/>
            <column name="remaining_balance" type="DECIMAL(19,2)"/>
            <column name="outstanding" type="DECIMAL(19,2)"/>
            <column name="late_by" type="INT"/>
            <column name="status" type="VARCHAR(50)"/>
            <column name="total_due" type="DECIMAL(19,2)"/>
            <column name="total_paid" type="DECIMAL(19,2)"/>
            <column name="created_at" type="DATETIME"/>
            <column name="updated_at" type="DATETIME"/>
            <column name="submitted_at" type="DATETIME"/>
        </createTable>

        <!-- Indexes for performance -->
        <createIndex tableName="repayment_schedule" indexName="idx_schedule_expected_date">
            <column name="expected_date"/>
        </createIndex>

        <createIndex tableName="repayment_schedule" indexName="idx_schedule_paid_date">
            <column name="paid_date"/>
        </createIndex>

        <createIndex tableName="repayment_schedule" indexName="idx_schedule_installment_number">
            <column name="installment_number"/>
        </createIndex>

        <!-- Foreign key referencing loans.id -->
        <addForeignKeyConstraint
                baseTableName="repayment_schedule"
                baseColumnNames="loan_id"
                referencedTableName="loans"
                referencedColumnNames="id"
                constraintName="fk_repayment_schedule_loan"
                onDelete="CASCADE"
                onUpdate="CASCADE"/>
    </changeSet>

</databaseChangeLog>
