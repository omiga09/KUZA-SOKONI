<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

<changeSet id="20251114-01-create-otp-table" author="kuza">
    <preConditions onFail="MARK_RAN">
        <not>
            <tableExists tableName="otp"/>
        </not>
    </preConditions>

    <createTable tableName="otp">
        <column name="id" type="BIGINT" autoIncrement="true">
            <constraints primaryKey="true" nullable="false"/>
        </column>
        <column name="code" type="VARCHAR(6)">
            <constraints nullable="false"/>
        </column>
        <column name="user_id" type="BIGINT">
            <constraints nullable="false"/>
        </column>
        <column name="expiry_time" type="BIGINT">
            <constraints nullable="false"/>
        </column>
        <column name="verified" type="BOOLEAN" defaultValueBoolean="false">
            <constraints nullable="false"/>
        </column>

    </createTable>

    <addForeignKeyConstraint baseColumnNames="user_id"
                             baseTableName="otp"
                             referencedColumnNames="id"
                             referencedTableName="user"
                             constraintName="fk_otp_user"/>
</changeSet>
    <changeSet id="20251114-02-add-columns-to-user" author="kuza">
        <addColumn tableName="otp">
            <column name="created_at" type="DATETIME"/>
            <column name="updated_at" type="DATETIME"/>
            <column name="submitted_at" type="DATETIME"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>