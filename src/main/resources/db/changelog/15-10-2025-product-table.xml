<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create-product-table" author="kuza">
        <createTable tableName="products">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="product_name" type="VARCHAR(255)"/>
            <column name="short_name" type="VARCHAR(100)"/>
            <column name="minimum_principal" type="DECIMAL(19,2)"/>
            <column name="maximum_principal" type="DECIMAL(19,2)"/>
            <column name="interest" type="DECIMAL(5,2)"/>
            <column name="interest_method" type="VARCHAR(50)"/>
            <column name="tenure_plan" type="VARCHAR(100)"/>
            <column name="repaid_every" type="VARCHAR(20)"/>
            <column name="repaid_frequency" type="INT"/>
            <column name="penalty_percentage" type="DECIMAL(5,2)"/>
            <column name="charges_percentage" type="DECIMAL(5,2)"/>
            <column name="fees" type="DECIMAL(19,2)"/>
            <column name="grace_period_days" type="INT"/>
            <column name="currency" type="VARCHAR(10)"/>
            <column name="status" type="VARCHAR(20)"/>
            <column name="collateral_percentage" type="DECIMAL(5,2)"/>
            <column name="repayment_strategy_id" type="BIGINT"/>
            <column name="created_at" type="DATETIME"/>
            <column name="updated_at" type="DATETIME"/>
            <column name="submitted_at" type="DATETIME"/>
        </createTable>

        <createIndex tableName="products" indexName="idx_product_name">
            <column name="product_name"/>
        </createIndex>

        <createIndex tableName="products" indexName="idx_product_status">
            <column name="status"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
