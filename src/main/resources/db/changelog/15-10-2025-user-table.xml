<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
           http://www.liquibase.org/xml/ns/dbchangelog
           https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <!-- CREATE TABLE -->
    <changeSet id="4" author="kuza">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="user"/>
            </not>
        </preConditions>

        <createTable tableName="user">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="username" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="email" type="VARCHAR(255)"/>
            <column name="phone_number" type="VARCHAR(50)"/>
            <column name="password" type="VARCHAR(255)"/>
            <column name="is_verified" type="VARCHAR(50)"/>
        </createTable>
    </changeSet>
    <changeSet id="20251115-add-pin-to-user" author="kuza">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="user" columnName="pin"/>
            </not>
        </preConditions>

        <addColumn tableName="user">
            <column name="pin" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="20251114-02-add-columns-to-user" author="kuza">
        <addColumn tableName="user">
            <column name="created_at" type="DATETIME"/>
            <column name="updated_at" type="DATETIME"/>
            <column name="submitted_at" type="DATETIME"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>
