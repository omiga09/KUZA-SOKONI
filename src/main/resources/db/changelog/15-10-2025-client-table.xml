<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Clients table -->
    <changeSet id="create-client-table" author="kuza">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="clients"/>
            </not>
        </preConditions>
        <createTable tableName="clients">
            <column name="id" type="BIGINT UNSIGNED" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(100)"/>
            <column name="second_name" type="VARCHAR(100)"/>
            <column name="last_name" type="VARCHAR(100)"/>
            <column name="phone_number" type="VARCHAR(50)"/>
            <column name="email" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="date_of_birth" type="DATE"/>
            <column name="gender" type="VARCHAR(20)"/>
            <column name="address" type="VARCHAR(255)"/>
            <column name="status" type="VARCHAR(20)"/>
            <column name="is_verified" type="VARCHAR(20)"/>
            <column name="created_at" type="DATETIME"/>
            <column name="updated_at" type="DATETIME"/>
            <column name="submitted_at" type="DATETIME"/>
        </createTable>

        <createIndex tableName="clients" indexName="idx_client_status">
            <column name="status"/>
        </createIndex>

        <createIndex tableName="clients" indexName="idx_client_verification">
            <column name="is_verified"/>
        </createIndex>
    </changeSet>

    <!-- enabled column -->
    <changeSet id="add-enabled-column" author="kuza">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="clients" columnName="enabled"/>
            </not>
        </preConditions>
        <addColumn tableName="clients">
            <column name="enabled" type="BIT(1)" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <!-- active column -->
    <changeSet id="add-active-column" author="kuza">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="clients" columnName="active"/>
            </not>
        </preConditions>
        <addColumn tableName="clients">
            <column name="active" type="BIT(1)" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <!-- user_id column -->
    <changeSet id="add-user-id-column" author="kuza">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="clients" columnName="user_id"/>
            </not>
        </preConditions>
        <addColumn tableName="clients">
            <column name="user_id" type="BIGINT UNSIGNED"/>
        </addColumn>

        <addForeignKeyConstraint
                baseTableName="clients"
                baseColumnNames="user_id"
                referencedTableName="users"
                referencedColumnNames="id"
                constraintName="fk_client_user"/>
    </changeSet>

    <!-- ensure phone_number is NOT NULL -->
    <changeSet id="update-phone-number" author="kuza">
        <preConditions onFail="MARK_RAN">
            <columnExists tableName="clients" columnName="phone_number"/>
        </preConditions>
        <modifyDataType tableName="clients" columnName="phone_number" newDataType="VARCHAR(50)"/>
        <addNotNullConstraint tableName="clients" columnName="phone_number" columnDataType="VARCHAR(50)"/>
    </changeSet>

    <!-- Client entity types -->
    <changeSet id="create-client-entity-types" author="kuza">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="client_entity_types"/>
            </not>
        </preConditions>
        <createTable tableName="client_entity_types">
            <column name="client_id" type="BIGINT UNSIGNED">
                <constraints nullable="false"/>
            </column>
            <column name="entity_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="client_entity_types"
                baseColumnNames="client_id"
                referencedTableName="clients"
                referencedColumnNames="id"
                constraintName="fk_entity_type_client"/>
    </changeSet>

    <!-- Client guarantors -->
    <changeSet id="create-client-guarantors" author="kuza">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="client_guarantors"/>
            </not>
        </preConditions>
        <createTable tableName="client_guarantors">
            <column name="client_id" type="BIGINT UNSIGNED">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="relationship" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="phone_number" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="is_verified" type="BIT(1)" defaultValueNumeric="0"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="client_guarantors"
                baseColumnNames="client_id"
                referencedTableName="clients"
                referencedColumnNames="id"
                constraintName="fk_guarantor_client"/>
    </changeSet>

</databaseChangeLog>
