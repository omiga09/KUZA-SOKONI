<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create-transactions-table" author="kuza">
        <createTable tableName="transactions">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="loan_id" type="BIGINT"/>
            <column name="date" type="DATE"/>
            <column name="initiator" type="VARCHAR(255)"/>
            <column name="amount" type="DECIMAL(19,2)"/>
            <column name="direction" type="VARCHAR(10)"/>
            <column name="type" type="VARCHAR(50)"/>
            <column name="reversed_id" type="BIGINT"/>
            <column name="on_entity" type="VARCHAR(50)"/>
            <column name="created_at" type="DATETIME"/>
            <column name="updated_at" type="DATETIME"/>
            <column name="submitted_at" type="DATETIME"/>
        </createTable>

        <createIndex tableName="transactions" indexName="idx_transaction_loan">
            <column name="loan_id"/>
        </createIndex>

        <createIndex tableName="transactions" indexName="idx_transaction_type">
            <column name="type"/>
        </createIndex>

        <createIndex tableName="transactions" indexName="idx_transaction_date">
            <column name="date"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
