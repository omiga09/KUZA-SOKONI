<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create-repayment-strategy-table" author="kuza" runOnChange="true">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="repayment_strategies"/>
            </not>
        </preConditions>

        <createTable tableName="repayment_strategies">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>

            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="principal" type="INT"/>
            <column name="interest" type="INT"/>
            <column name="penalty" type="INT"/>
            <column name="fees" type="INT"/>
            <column name="charges" type="INT"/>


            <column name="created_at" type="DATETIME"/>
            <column name="updated_at" type="DATETIME"/>
            <column name="submitted_at" type="DATETIME"/>
        </createTable>

        <createIndex tableName="repayment_strategies" indexName="idx_strategy_name">
            <column name="name"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
