<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Create charges_config table if not exists -->
    <changeSet id="create-charges-config-table" author="kuza">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="charges_config"/>
            </not>
        </preConditions>

        <createTable tableName="charges_config">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>

            <column name="name" type="VARCHAR(255)"/>
            <column name="amount" type="DECIMAL(19,2)"/>
            <column name="repayment_type" type="VARCHAR(20)"/>
            <column name="collected_on" type="VARCHAR(50)"/>
            <column name="created_at" type="DATETIME"/>
            <column name="updated_at" type="DATETIME"/>
            <column name="submitted_at" type="DATETIME"/>
        </createTable>

        <createIndex tableName="charges_config" indexName="idx_config_collected_on">
            <column name="collected_on"/>
        </createIndex>
    </changeSet>

    <!-- Add deducted_on column ONLY if not exists -->
    <changeSet id="add-deducted-on-to-charges-config" author="kuza">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="charges_config" columnName="deducted_on"/>
            </not>
        </preConditions>

        <addColumn tableName="charges_config">
            <column name="deducted_on" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
