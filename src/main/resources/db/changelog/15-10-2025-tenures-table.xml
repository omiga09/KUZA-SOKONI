<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="create-tenure-table" author="kuza">
        <createTable tableName="tenures">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="penalty_group_one" type="DECIMAL(19,2)"/>
            <column name="penalty_group_two" type="DECIMAL(19,2)"/>
            <column name="penalty_group_three" type="DECIMAL(19,2)"/>
            <column name="penalty_group_four" type="DECIMAL(19,2)"/>

            <column name="phase1_days" type="INT"/>
            <column name="phase2_days" type="INT"/>
            <column name="phase3_days" type="INT"/>
            <column name="phase4_days" type="INT"/>

            <column name="penalty_cap" type="INT"/>
            <column name="grace_period_days" type="INT"/>

            <column name="interest" type="DECIMAL(19,2)"/>

            <column name="number_of_days" type="INT"/>

            <column name="product_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_tenure_product"
                             referencedTableName="products" referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
