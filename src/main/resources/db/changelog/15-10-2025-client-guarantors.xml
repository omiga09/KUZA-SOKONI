<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create-client-guarantors-table" author="kuza">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="client_guarantors"/>
            </not>
        </preConditions>

        <createTable tableName="client_guarantors">
            <column name="client_id" type="BIGINT UNSIGNED">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="relationship" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="phone_number" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="is_verified" type="BIT(1)" defaultValueNumeric="0"/>

        </createTable>

        <addForeignKeyConstraint
                baseTableName="client_guarantors"
                baseColumnNames="client_id"
                referencedTableName="clients"
                referencedColumnNames="id"
                constraintName="fk_guarantor_client"/>
    </changeSet>

</databaseChangeLog>
