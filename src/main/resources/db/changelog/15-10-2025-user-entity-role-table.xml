<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
           http://www.liquibase.org/xml/ns/dbchangelog
           https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="6" author="kuza">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="user_entity_roles"/>
            </not>
        </preConditions>

        <createTable tableName="user_entity_roles">
            <column name="user_entity_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="role_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey
                tableName="user_entity_roles"
                columnNames="user_entity_id, role_id"
                constraintName="pk_user_entity_roles"/>

        <addForeignKeyConstraint
                baseTableName="user_entity_roles"
                baseColumnNames="user_entity_id"
                referencedTableName="user_entity"
                referencedColumnNames="id"
                constraintName="fk_user_entity_roles_user_entity"/>

        <addForeignKeyConstraint
                baseTableName="user_entity_roles"
                baseColumnNames="role_id"
                referencedTableName="role"
                referencedColumnNames="id"
                constraintName="fk_user_entity_roles_role"/>
    </changeSet>
</databaseChangeLog>