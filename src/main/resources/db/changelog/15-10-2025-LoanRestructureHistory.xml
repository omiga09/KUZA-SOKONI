<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create-loan-restructure-history" author="developer">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="loan_restructure_history"/>
            </not>
        </preConditions>

        <createTable tableName="loan_restructure_history">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="loan_id" type="BIGINT UNSIGNED">
                <constraints nullable="false"/>
            </column>

            <column name="old_principal" type="DECIMAL(19,2)"/>
            <column name="new_principal" type="DECIMAL(19,2)"/>
            <column name="old_interest_rate" type="DECIMAL(19,2)"/>
            <column name="new_interest_rate" type="DECIMAL(19,2)"/>
            <column name="old_installments" type="INT"/>
            <column name="new_installments" type="INT"/>
            <column name="effective_date" type="DATE"/>
            <column name="reason" type="VARCHAR(255)"/>

        </createTable>

        <addForeignKeyConstraint
                baseTableName="loan_restructure_history"
                baseColumnNames="loan_id"
                referencedTableName="loans"
                referencedColumnNames="id"
                constraintName="fk_restructure_loan"/>
    </changeSet>

</databaseChangeLog>
